@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index" method="post" class="form-horizontal" role="form">
    <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Filename</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" value="" id="filename" name="filename" placeholder="ends with .markdown extension" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-2">
            <input class="form-control" type="text" id="parameters[0].Key" name="parameters[0].Key" value="layout" required/>
        </div>
        <div class="col-xs-10">
            <input class="form-control" type="text" id="parameters[0].Value" name="parameters[0].Value" value="post" placeholder="value" required/>
        </div>
    </div>

    <input type="submit" value="submit"/>
</form>
