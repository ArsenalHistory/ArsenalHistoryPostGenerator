@model Dictionary<string,string>
@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index" method="post" class="form-horizontal" role="form">
    <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 col-form-label">Filename</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" value="" id="filename" name="filename" placeholder="ends with .markdown extension" required/>
        </div>
    </div>

    @for (int index = 0; index < Model.Count; index++)
    {
        KeyValuePair<string,string> frontMatter  = Model.ElementAt(index);
        <div class="form-group row">
            <div class="col-xs-2">
                <input class="form-control" type="text" id="@($"parameters[{index}].Key")" name="@($"parameters[{index}].Key")" value="@frontMatter.Key" required/>
            </div>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="@($"parameters[{index}].Value")" name="@($"parameters[{index}].Value")" value="@frontMatter.Value" required/>
            </div>
        </div>
    }

    <input type="submit" value="submit"/>
</form>
